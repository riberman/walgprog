<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>
      <%= full_title(yield(:head_title)) %>
    </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'devise/session', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'devise/session', 'data-turbolinks-track': 'reload' %>

    <%= render 'application/favicon' %>
  </head>

  <body id="<%= controller_name %>-<%= action_name %>" >

    <div id="app" class="page">
      <div class="page-single">

        <div class="container">
          <div class="row">
            <div class="col col-login mx-auto">

              <div class="text-center mb-4">
                <%= link_to admins_root_path do %>
                  <%= render 'shared/logo', css_class: 'logo-devise center' %>
                <% end  %>
                <h4>
                  WAlgProg
                </h4>
              </div>

              <div class="card card-body p-6">
                <%= render 'shared/flash_messages'%>

                <div class="card-title">
                  <h4 class="text-center">
                    <%= yield :title %>
                  </h4>
                </div>

                <%= yield %>

              </div> <!-- .card -->
            </div>
          </div> <!-- .row -->
        </div> <!-- .container -->

      </div>
    </div>
  </body>
</html>
