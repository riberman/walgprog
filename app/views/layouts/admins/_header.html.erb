<div class="fixed-top header py-4">
  <div class="container-fluid">
    <div class="d-flex">
      <%= link_to admins_root_path do %>
        <%= render 'shared/logo', css_class: 'logo-fixed-header mr-2' %>
      <% end  %>

      <span class="d-lg-block mt-2 text-muted font-weight-bold">
        WalgProg
      </span>

      <div class="d-flex order-lg-2 ml-auto">

        <div class="dropdown">
          <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
            <span class="avatar" style="background-image: url('<%= current_admin.image.url(:thumb)%>');"></span>

            <span class="ml-2 d-none d-lg-block">
              <span class="text-default"><%= current_admin.name %></span>
              <small class="text-muted d-block mt-1">Administrator</small>
            </span>
          </a>

          <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
            <%= link_to edit_admin_registration_path, class: 'dropdown-item' do %>
              <i class="dropdown-icon fe fe-user"></i> <%= t('sessions.profile') %>
            <% end %>
            <%= link_to destroy_admin_session_path, method: :delete, class: 'dropdown-item' do %>
              <i class="dropdown-icon fe fe-log-out"></i> <%= t('sessions.sign_out') %>
            <% end %>
          </div>
        </div>

      </div>

      <%= render '/layouts/admins/responsive_menu_toggle' %>
    </div>
  </div>
</div>
