<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>
      <%= full_title(yield(:head_title)) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'admins/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admins/application', 'data-turbolinks-track': 'reload' %>

    <%= render 'application/favicon' %>
  </head>

  <body id="<%= controller_name %>-<%= action_name %>" class="has-child-fixed-top">
    <div class="page">
      <div class="page-main">
        <%= render 'layouts/admins/header' %>
        <div class="container-fluid">

          <div class="row">
            <div class="col-sm-12 col-md-3 col-lg-2">
              <%= render sidebar %>
            </div>

            <div class="col-md-9 col-lg-10">

              <%= render 'shared/breadcrumbs' %>

              <div id="main-content" class="card mb-9">
                <div class="card-header">
                  <h1 class="page-title mb-3">
                    <%= yield(:page_title) %>
                  </h1>
                </div>

                <div class="card-body">
                  <%= render 'shared/flash_messages' %>
                  <%= yield %>
                </div>
              </div>
            </div>

          </div> <!-- .container -->
        </div>
      </div>
      <%= render 'layouts/admins/footer' %>
    </div>
  </body>
</html>
