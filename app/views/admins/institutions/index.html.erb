<% provide(:head_title, t('institutions.index')) %>
<% provide(:page_title, t('institutions.index')) %>

<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-sm-12 col-lg-8 mb-2">
        <div class="input-group mb-3">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Procurar...">
            <span class="input-group-append">
              <button class="btn btn-outline-info" type="button"><i class="fe fe-search"></i></button>
            </span>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-lg-4">
        <%= link_to new_admins_institution_path, class: "btn btn-outline-primary btn-block" do %>
          <%= icon('fas', 'plus', class: 'mr-2') %><%= t('institutions.new') %>
        <% end %>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table card-table table-striped table-vcenter">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.institution.name') %></th>
            <th><%= t('activerecord.attributes.institution.acronym') %></th>
            <th><%= t('activerecord.attributes.institution.city') %></th>
            <th><%= t('activerecord.attributes.institution.state') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @institutions %>
        </tbody>
      </table>
    </div>
  </div>
</div>
