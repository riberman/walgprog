<tr>
  <td><%= event.name %> (<%= event.initials %>)</td>
  <td style="color: <%= event.color %>;">
    <%= icon('fas', 'circle') %>
    <td>
      <%= t('events.from_until', beginning: l(event.beginning_date, format: :short),
            end:  l(event.end_date, format: :short) ) %>
    </td>
    <td><%= event.local %></td>
    <td><%= l(event.created_at, format: :short_hour) %></td>
    <td>
      <div class="btn-group">
        <%= link_to admins_event_path(event) do %>
          <%= icon('fas', 'search', class: 'icon ml-2', 'data-toggle' => 'tooltip', title: t('helpers.show')) %>
        <% end %>

        <%= link_to admins_event_sections_path(event) do %>
          <%= icon('fas', 'object-group', class: 'icon ml-2', 'data-toggle' => 'tooltip', title: t('sections.index')) %>
        <% end %>

        <%= link_to edit_admins_event_path(event) do %>
          <%= icon('fas', 'edit', class: 'icon ml-2', 'data-toggle' => 'tooltip', title: t('helpers.edit')) %>
        <% end %>

        <%= link_to admins_event_path(event),
          method: :delete,
          data: { confirm: t('prompt.confirm') } do %>
          <%= icon('fa', 'trash', class: 'icon ml-2', 'data-toggle' => 'tooltip', title: t('helpers.delete')) %>
        <% end %>
      </div>
    </td>
</tr>
